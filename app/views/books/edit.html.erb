<h1>Editing Book</h1>
  <%= form_with model: @book do |f| %>
<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>
  
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  
  <%= f.submit 'Update Book' %><br>
  <a class="Show" href="/books">Show</a>
  |
  <a class="back" href="/books">Back</a>
  <% end %>
  
  